<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.suyeon.shopProject.comment.CommentMapper">

<insert id="insertComment" parameterType="com.suyeon.shopProject.comment.CommentDTO">
        INSERT INTO comment (board_id, name, content)
        VALUES (#{boardId}, #{name}, #{content})
    </insert>

<select id="findByBoardId" resultType="com.suyeon.shopProject.comment.CommentDTO">
        SELECT * 
        FROM comment
        WHERE board_id = #{boardId}
        ORDER BY id DESC
    </select>
    
</mapper> 