<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.suyeon.shopProject.board.BoardMapper">

<select id="findAll" resultType="com.suyeon.shopProject.board.BoardDTO">
	SELECT *
	FROM board
	ORDER BY id DESC
</select>

<select id="findById" parameterType="int" resultType="com.suyeon.shopProject.board.BoardDTO">
    SELECT * 
    FROM board
    WHERE id = #{id}
</select>

<insert id="insertBoard" parameterType="com.suyeon.shopProject.board.BoardDTO">
	INSERT INTO board
		(name, content, created_at, comment)
		VALUES(#{name}, #{content}, now(), #{comment})
</insert>

<delete id="deleteBoard" parameterType="int">
	DELETE 
	FROM board
	WHERE id = #{id};
</delete>

</mapper> 