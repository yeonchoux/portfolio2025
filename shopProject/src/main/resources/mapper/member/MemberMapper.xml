<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.suyeon.shopProject.member.MemberMapper">

<!--회원 가입-->
	<insert id="insertMember" parameterType="com.suyeon.shopProject.member.MemberDTO">
	INSERT INTO member
	(email, password, birth, address)
	VALUES(#{email},#{password},#{birth},#{address});
	</insert>
	
	<!--이메일로 회원 찾기-->
	<select id="findByMember" parameterType="String" resultType="com.suyeon.shopProject.member.MemberDTO">
	SELECT *
	FROM member
	WHERE email = #{email}
	</select>
	
</mapper> 